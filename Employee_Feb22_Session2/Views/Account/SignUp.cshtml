@model Employee_Feb22_Session2.Models.tblSignUp

@{
    ViewBag.Title = "SignUp";
}

<style>
    td {
        width: 100px;
    }
</style>

<h2>SignUp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="color:green; display:inline;margin-left: 3px;font-size: large;">
        @TempData["SignUpMessage"]
    </div>

    <table border="2">
        <tr>
            <td style="Width:150px;height: 35px;text-align:center;">@Html.LabelFor(model => model.UserName)</td>
            <td style="Width:150px;text-align:left;"> @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", style = "height:inherit;width:300px", placeholder = "Enter UserName" } })</td>
        </tr>
        <tr>
            <td style="Width:150px;height: 35px;text-align:center;">@Html.LabelFor(model => model.Password)</td>
            <td style="Width:150px;text-align:left;"> @Html.PasswordFor(model => model.Password, new { @class = "form-control", autocomplete = "off", style = "height:inherit;width:300px", placeholder = "Enter Password" })</td>
        </tr>
        <tr>
            <td style="Width:150px;height: 35px;text-align:center;">@Html.LabelFor(model => model.Name)</td>
            <td style="Width:150px;text-align:left;"> @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", style = "height:inherit;width:300px", placeholder = "Enter Name" } })</td>
        </tr>
        <tr>
            <td style="Width:150px;height: 35px;text-align:center;">@Html.LabelFor(model => model.MobileNo)</td>
            <td style="Width:150px;text-align:left;"> @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", style = "height:inherit;width:300px", placeholder = "Enter MobileNo" } })</td>
        </tr>
        <tr>
            <td style="Width:150px;height: 35px;text-align:center;">@Html.LabelFor(model => model.Address)</td>
            <td style="Width:150px;text-align:left;"> @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", style = "height:inherit;width:300px", placeholder = "Enter Address" } })</td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center;height:35px">
                <div class="form-group">
                    <div class="col-md-12">
                        <input class="btn btn-success" type="submit" value="Sign-Up" />
                    </div>
                </div>
            </td>

        </tr>
    </table>
}

